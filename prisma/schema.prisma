generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hostel {
  id      String @id @default(dbgenerated("public.uuid_generate_v4()"))
  name    String @db.VarChar(50) @unique
  floors  Floor[]
}

model Floor {
  id        String @id @default(dbgenerated("public.uuid_generate_v4()"))
  name      String @db.VarChar(50) @unique
  hostel    Hostel @relation(fields: [hostelId], references: [id])
  hostelId  String
}